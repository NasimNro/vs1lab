<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" media=" only screen and(mim-width: 400px)" href="./stylesheets/style.css"  />
    

</head>

<body class>


    <header class="header ">
        
            <img id="haed_image" src="./images/location.png" class="header__image" alt="an image of a map and location">
            <h1 class="header__title">GeoTagApp</h1>
            <nav class="header__navigation">
                <a href="#">About</a>  <a href="#">Help</a>  <a href="/">Home</a>
            </nav>
    
    </header>

    <main class="main row">
        
            <section class="main__tagging tagging col-3">
                <h2>Tagging</h2>

                <!-- ############### VS1Lab 1a Form 1 Start -->
                <form id="tag-form" action="/tagging" method="post">
                    <fieldset id="tagging_fieldset">
                        <legend id="tagging_legend"> <b>Add a new GeoTag </b> </legend>  
                            <label for="tagging_latitude">Latitude:</label> 
                            <input class="tagging_input" type="text" id="tagging_latitude" name="tagging_latitude" readonly value="<%= latitude %>"> 
                            <label for="tagging_longitude">Longitude:</label> 
                            <input class="tagging_input" type="text" id="tagging_longitude" name="tagging_longitude" readonly value="<%= longitude %>"> 
                            <label for="tagging_name">Name:</label> 
                            <input class="tagging_input" type="text" maxlength="10" required="required" name="tagging_name" id="tagging_name" 
                                placeholder="e.g. central Berlin"> 
                            <label for="tagging_hashtag">Hashtag:</label> 
                            <input class="tagging_input" type="text"  pattern="#.{1,9}" maxlength="10" name="tagging_hashtag" id="tagging_hashtag" 
                                placeholder="e.g. #ber"> 
                            <input class="tagging_input" type="submit" value="Add Tag">
                        
                    </fieldset>


                    <!-- ... your code here ... -->

                </form>
                <!-- ############### VS1Lab 1a Form 1 End -->

            </section>
        

    
            <section class="main__discovery discovery col-9">
                <h2 class="discovery__title">Discovery</h2>

                <!-- ############### VS1Lab 1a Form 2 Start -->
                <form class="discovery__search" id="discoveryFilterForm" action="/discovery" method="post">
                    <fieldset id="discovery_fieldset">
                        <legend id="search_legend"> <b> Search </b> </legend> 
                            <label id="search_label" for="discovery_search">Search term or keywords:</label> 
                            <input class="disvovery_input" name="discovery_search" type="text" placeholder="eg.berlin" required="required" id="discovery_search"> 
                            <input class="discovery_input" name="discovery_latitude" type="hidden" id="discovery_latitude" value="<%= latitude %>">
                            <input class="discovery_input" name="discovery_longitude" type="hidden" id ="discovery_longitude" value="<%= longitude %>">
                            <input class="disvovery_input" type="submit" value="Search">
                        
                    </fieldset>
                    <!-- ... your code here ... -->

                </form>
                <!-- ############### VS1Lab 1a Form 2 End -->

                <div class="discovery__wrapper ro">
                    <div class="discovery__taglist col-6">
                        <ul class="discovery__results" id="discoveryResults">
                            <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                                <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                            <% }); %>
                        </ul>
                    </div>

                    <div class="discovery__map col-6">
                        <img src="./images/mapview.jpg" data-tags="<%= JSON.stringify(taglist) %>" alt="a map with locations" id="mapView" /> <br>
                        <span id="result_map">Result map</span>
                    </div>
                </div>
            </section>


    </main>

    <footer class="footer">
        <span id="footer_text">(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>
    <script src="./javascripts/location-helper.js"></script>
    <script src="./javascripts/map-manager.js"></script>
    <script src="./javascripts/geotagging.js"></script>
</body>

</html>